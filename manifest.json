{
  "manifest_version": 2,
  "name": "Exchange Rate",
  "short_name": "ExchangeRate",
  "version": "1.0.1",
  "description": "Check exchange rate on your toolbar while browsing the web!",
  "author": "Pedro Baracho",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "alarms",
    "storage",
    "https://free.currencyconverterapi.com/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_page": "options.html",
  "browser_action": {

  }
}